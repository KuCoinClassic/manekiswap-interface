{
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "declaration": false,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "jsxImportSource": "theme-ui",
    "isolatedModules": false,
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": false,
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "strictNullChecks": true,
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "types": ["node"]
  },
  "exclude": ["node_modules"],
  "include": ["./scripts/**/*.ts", "./src/**/*.ts", "./src/**/*.tsx", "./webpack/**/*.ts"]
}
